<h4>注文履歴詳細</h4>

<table class="table table-hover table-inverse">

    <tr>
      <td>
        <strong>購入者</strong>
        <%= @order.name %>
      </td>
    </tr>

    <tr>
      <td>
        注文日
        <%= @order.created_at.strftime('%Y/%m/%d') %>
      </td>
    </tr>

    <tr>
      <td>
        配送先
        <%= @order.postal_code %>
        <%= @order.address %>
        <%= @order.name %>
      </td>
    </tr>

    <tr>
      <td>
        支払方法
        <%= @order.payment_method_i18n %>
      </td>
    </tr>

    <tr>
      <td>
        注文ステータス
        <%= form_with model: @order, url: admin_order_path, local: true, method: :patch do |f| %>
          <%= f.select :status, Order.statuses.keys %>
          <%#[['入金待ち', 0], ['入金確認', 1], ['製作中', 2], ['発送準備中', 3, ['発送済み', 4]]%>
          <%= f.submit "更新" %>
        <% end %>

      </td>
    </tr>
</table>
<table>

  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th>制作ステータス</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% total = 0 %>
    <% @order_details.each do |order_detail| %>
    <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.item.with_tax_price %></td>
      <td><%= order_detail.amount %></td>
      <td><%= total += order_detail.item.with_tax_price*order_detail.amount %></td>
      <td>
        <%= form_with model: @order_detail, url: admin_order_detail_path(order_detail), local: true, method: :patch do |f| %>
        <%= f.select :making_status, OrderDetail.making_statuses.keys %>
         <%#[["着手不可", "着手不可"], ["着手中", "着手中"], ["完了", "完了"]], include_blank: "着手不可" %>
        <%= f.submit '更新' %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>


<table>
  <tr>
    <th>商品合計</th>
    <th>配送料</th>
    <th>ご請求額</th>
  </tr>

    <td><%= total %>円</td>
    <td><%= @order.postage %></td>
    <td><strong><%= total+@order.postage %></strong></td>
</table>


