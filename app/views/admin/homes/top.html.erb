<div class="container">
  <div class="row">
    <div class="col-3 p-3">
      <h4 class="table-active">
        <div style="text-align: center">注文履歴一覧覧</div>
      </h4>
    </div>
  </div>

  <div class="row">
    <div class="col-10">
      <table class="table table-hover table-inverse">

        <thead class="table table-active">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>

      <% total_amount = 0 %>

        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.created_at.strftime('%Y/%m/%d'), admin_order_path(order) %></td>
            <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
            <td><%= order.order_details.sum(:amount) %></td>
            <td><%= order.status_i18n %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <%= paginate @orders %>

</div>


