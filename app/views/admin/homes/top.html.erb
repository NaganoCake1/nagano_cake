<h2>注文履歴一覧</h2>

<table class="table table-hover table-inverse">

    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th><%#注文ステータス%></th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td><%= order.create_at %></td>
        <td><%= order.customer_id %></td>
        <td><%= order.order_details.quantity %></td>
        <td><%= order.status %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
