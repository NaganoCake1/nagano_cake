<div class="container">
  <div class="row">
    <div class="col-2 p-3">
      <h4 class="table-active">
        <div style="text-align: center">ジャンル編集</div>
      </h4>
    </div>
  </div>

  <% if @genre.errors.any? %>
    <%= @genre.errors.count %>件のエラーが発生しました
    <ul>
      <% @genre.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: [:admin, @genre], local:true do |f| %>
    <div class="row py-4">
      <div class="col-2">
        ジャンル名
      </div>
      <div class="col-2">
        <%= f.text_field :name %>
      </div>
      <div class="col-2 offset-1">
        <%= f.submit '変更を保存', class: "btn btn-success" %>
      </div>
    </div>
  <% end %>