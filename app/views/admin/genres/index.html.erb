<div class="container">
  <div class="row">
    <div class="col-3 p-3">
      <h4 class="table-active">
        <div style="text-align: center">ジャンル一覧・追加</div>
      </h4>
    </div>
  </div>

  <%= form_with model: [:admin, @genre_new], local:true do |f| %>
    <div class="row py-4">
      <div class="col-2">
        ジャンル名
      </div>
      <div class="col-2">
        <%= f.text_field :name %>
      </div>
      <div class="col-2 offset-1">
        <%= f.submit '新規登録', class: "btn btn-success" %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-4">
      <table class="table table-hover table-inverse">
        <tr class="table-active">
          <th>ジャンル</th>
          <th></th>
        </tr>

        <% @genres.each do |genre| %>
        <tr>
          <td>
            <%= genre.name %>
          </td>
          <td>
            <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>

</div>