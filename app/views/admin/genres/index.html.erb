<h1>ジャンル一覧・追加</h1>

<div class="container">

  <div class="row">
    <%= form_with model: @genre, url: '/admin/genres', local:true do |f| %>

    <div class="col-md-2 offset-md-1">
      ジャンル名
    </div>

    <div class="col-md-2 offset-md-1">
      <%= f.text_field :name %>
    </div>

    <div calss="col-md-2 offset-md-4">
      <%= f.submit '新規登録' %>
    </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-4 offset-md-8">
      <table class="table table-hover table-inverse">

        <thead>
          <tr>
            <th>ジャンル</th>
          </tr>
        </thead>

        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= genre.name %>
            </td>
            <td>
              <%= link_to "編集する",edit_admin_genre_path(genre.id) %>
            </td>
          </tr>
          <% end %>
        </tbody>

      </table>
    </div>
  </div>

</div>