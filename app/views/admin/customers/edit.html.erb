<h2><%= "#{@customer.last_name} #{@customer.first_name}" %>さんの会員情報編集</h2>

<table class="table table-hover table-inverse">
  <tbody>
    <%= form_with model: [:admin, @customer], local:true do |f| %>


    <tr>
      <td>
        会員ID
        <%= @customer.id %>
      </td>
    </tr>

    <tr>
      <td>
        氏名
        <%= f.text_field :first_name %>
        <%= f.text_field :last_name %>
      </td>
    </tr>

    <tr>
      <td>
        フリガナ
        <%= f.text_field :first_name_kana %>
        <%= f.text_field :last_name_kana %>
      </td>
    </tr>

    <tr>
      <td>
        郵便番号
        <%= f.text_field :postal_code %>
      </td>
    </tr>

    <tr>
      <td>
        住所
        <%= f.text_field :adress %>
      </td>
    </tr>

    <tr>
      <td>
        電話番号
        <%= f.text_field :telephone_number %>
      </td>
    </tr>

    <tr>
      <td>
        メールアドレス
        <%= f.email_field :email %>
      </td>
    </tr>

<% if false %>
    <tr>
      <td>
        会員ステータス
        <%= form.radio_button :is_active, "有効" %>
        <%= form.label :is_active, "有効", value: true %>
        <%= form.radio_button :is_active, "退会" %>
        <%= form.label :is_active, "退会", value: false %>
      </td>
    </tr>
<% end %>

    <% end %>

  </tbody>

</table>