<h2><%= "#{@customer.last_name} #{@customer.first_name}" %>さんの会員詳細</h2>

<table class="table table-hover table-inverse">
  <tbody>

    <tr>
      <td>
        会員ID
        <%= @customer.id %>
      </td>
    </tr>

    <tr>
      <td>
        氏名
        <%= @customer.first_name %>
        <%= @customer.last_name %>
      </td>
    </tr>

    <tr>
      <td>
        フリガナ
        <%= @customer.first_name_kana %>
        <%= @customer.last_name_kana %>
      </td>
    </tr>

    <tr>
      <td>
        郵便番号
        <%= @customer.postal_code %>
      </td>
    </tr>

    <tr>
      <td>
        住所
        <%= @customer.adress %>
      </td>
    </tr>

    <tr>
      <td>
        電話番号
        <%= @customer.telephone_number %>
      </td>
    </tr>

    <tr>
      <td>
        メールアドレス
        <%= @customer.email %>
      </td>
    </tr>

    <tr>
      <td>
        会員ステータス
        <%= @customer.is_active %>
      </td>
    </tr>

    <tr>
      <td>
        <%= link_to "編集する", edit_admin_customer_path(@customer.id) %>
      </td>
    </tr>

  </tbody>

</table>