<h2>商品新規登録</h2>

<table class="table table-hover table-inverse">
  <tbody>
    <%= form_with model: @item_new, url: 'admin/items', local:true do |f| %>

    <tr>
      <td>
        商品画像
        <%= f.file_field :image, accept: "image/*" %>
      </td>
    </tr>

    <tr>
      <td>
        商品名
        <%= f.text_field :name %>
      </td>
    </tr>

    <tr>
      <td>
        商品説明
        <%= f.text_field :introduction %>
      </td>
    </tr>

    <tr>
      <td>
        ジャンル
      </td>
    </tr>

    <tr>
      <td>
        税抜価格
        <%= f.text_field :price %>
      </td>
    </tr>
    <% end %>

  </tbody>

</table>
