<h2>商品編集</h2>

<table class="table table-hover table-inverse">
  <tbody>
    <%= form_with model: [:admin, @item], local:true do |f| %>

    <tr>
      <td>
        商品画像
        <%= f.file_field :image, accept: "image/*" %>
      </td>
    </tr>

    <tr>
      <td>
        商品名
        <%= f.text_field :name %>
      </td>
    </tr>

    <tr>
      <td>
        商品説明
        <%= f.text_area :introduction %>
      </td>
    </tr>

    <tr>
      <td>
        ジャンル
        <%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => true %>
      </td>
    </tr>

    <tr>
      <td>
        税抜価格
        <%= f.text_field :price %>
      </td>
    </tr>

    <tr>
      <td>
        <%= f.submit '変更を保存' %>
      </td>
    </tr>
    <% end %>

  </tbody>

</table>
