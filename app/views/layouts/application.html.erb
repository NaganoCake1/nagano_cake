<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

     <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">


    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>LOGO</span>
          </a>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="true" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <div class="card-header">
              <ul class="navbar-nav ml-auto">
                <% if admin_signed_in? %>
                  <li>
                    <%= link_to items_path(current_user), class: "nav-link active" do %>
                      商品一覧
                    <% end %>
                  </li>
                  <li>
                    <%= link_to admin_customers_path, class: "nav-link active" do %>
                      会員一覧
                    <% end %>
                  </li>
                  <li>
                    <%= link_to admin_order_details_path, class: "nav-link active" do %>
                      注文履歴一覧
                    <% end %>
                  </li>
                  <li>
                    <%= link_to admin_genres_path, class: "nav-link active" do %>
                      ジャンル一覧
                    <% end %>
                  </li>
                  <li>
                    <%= link_to destroy_admin_session_path,method: :delete, class: "nav-link active" do %>
                      ログアウト
                    <% end %>
                  </li>
                <% else %>

                  <li>
                    <%= link_to public_about_path, class: "nav-link active" do %>
                      About
                    <% end %>
                  </li>
                  <li>
                    <%= link_to admin_items_path, class: "nav-link active" do %>
                      商品一覧
                    <% end %>
                  </li>
                  <li>
                    <%= link_to new_customer_registration_path, class: "nav-link active" do %>
                      新規登録
                    <% end %>
                  </li>
                  <li>
                    <%= link_to customer_session_path, class: "nav-link active" do %>
                      ログイン
                    <% end %>
                  </li>

                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </nav>
    </header>

    <%= yield %>

    <footer></footer>
  </body>
</html>
