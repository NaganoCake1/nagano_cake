<div class="container">
  <div class="row">
    <div class="col-2 p-3">
      <h4 class="table-active">
        <div style="text-align: center"><h4>配送先編集</h4></div>
      </h4>
    </div>
  </div>

  <% if @address.errors.any? %>
    <%= @address.errors.count %>件のエラーが発生しました
    <ul>
      <% @address.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <table>
    <%= form_with model: @address, url: address_path, method: :patch, local:true do |f| %>
      <tr>
        <th class="col-3">郵便番号(ハイフンなし)</th>
        <td>
          <%= f.text_field :postal_code %>
        </td>
      </tr>

      <tr>
        <th class="col-3">住所</th>
        <td>
          <%= f.text_field :address, size: "60x20" %>
        </td>
      </tr>

     <tr>
        <th class="col-3">宛名</th>
        <td>
          <%= f.text_field :name %>
        </td>
        <td>
          <div class="d-flex justify-content-end">
            <%= f.submit "変更内容を保存", class: "btn btn-success" %>
          </div>
        </td>
      </tr>
    <% end %>
  </table>
</div>