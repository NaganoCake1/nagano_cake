<h4>配送先登録/一覧</h4>


<%= form_with model: @address_new, url: public_addresses_path, local:true do |f| %>
<table>
  <tr>
    <td>
      郵便番号(ハイフンなし)
      <%= f.text_field :postal_code %>
    </td>
  </tr>

  <tr>
    <td>
      住所
      <%= f.text_field :address %>
    </td>
  </tr>

 <tr>
    <td>
      宛名
      <%= f.text_field :name %>

      <%= f.submit "新規登録" %>
    </td>
  </tr>
</table>

  <% end %>
<table class="table table-hover table-inverse">

  <thead>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
    <tr>
      <td>
        <%= address.postal_code %>
      </td>
      <td>
        <%= address.address %>
      </td>
      <td>
        <%= address.name %>
      </td>
      <td>
        <%= link_to "編集する", edit_public_address_path(address.id) %>
        <%= link_to "消去する", public_address_path(address.id), method: :delete  %>
      </td>
    </tr>
    <% end %>
  </tbody>

</table>