<h4>注文情報入力</h4>
<%= form_with model: @order, url: public_orders_check_path, method: :post, local: true do |f| %>

<h4><strong>支払方法</strong></h4>
  <div class="field">
    <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>

    <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>
  </div>

  <h4><strong>お届け先</strong></h4>
  <div class="field">
      <%= f.radio_button :address_option, 0 %>
        <%= f.label :address, "ご自身の住所" %>
      〒<%= current_customer.postal_code %>
        <%= current_customer.address %>
        <%= current_customer.last_name %><%= current_customer.first_name %>
  </div>

  <div class="field">
    <%= f.radio_button :address_option, 1 %>
      <%= f.label :address, "登録済住所から選択" %>
      <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
  </div>

  <div class="field">
    <%= f.radio_button :address_option, 2 %>
      <%= f.label :address, "新しいお届け先" %>
        <table class="table table-hover table-inverse">
          <tbody>
            <tr>
              <td><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></td>
              <td><%= f.text_field :postal_code %></td>
             </tr>
             <tr>
              <td><%= f.label :address, "住所" %></td>
              <td><%= f.text_field :address %></td>
            </tr>
            <tr>
              <td><%= f.label :name, "宛名" %></td>
              <td><%= f.text_field :name %></td>
            </tr>
          </tbody>
        </table>
  </div>

  <%= f.submit "確認画面へ進む" %>
<% end %>