<div class="container">
  <div class="row">
    <div class="col-3 p-3">
      <h4 class="table-active">
        <div style="text-align: center"><h4>注文履歴詳細</h4></div>
      </h4>
    </div>
  </div>


<% total = 0 %>

<div class="row">
  <div class="col-7">
    <h5>注文情報</h5>
      <table class="table table-bordered">
          <tr>
            <th class="table-active col-3">注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th class="table-active col-3">配送先</th>
            <td>
              <%= @order.postal_code %></br>
              <%= @order.address %></br>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <th class="table-active col-3">支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th class="table-active col-3">ステータス</th>
            <td><%= @order.status_i18n %></td>
          </tr>
      </table>
    </div>

    <div class="col-4">
      <h5>請求情報</h5>
        <table class="table table-bordered">
          <tr>
            <th class="table-active">商品合計</th>
            <td><%= total %>円</td>
          </tr>
          <tr>
            <th class="table-active">配送料</th>
            <td><%= @order.postage %></td>
          </tr>
          <tr>
            <th class="table-active"><strong>ご請求額</strong></th>
            <td><strong><%= total+@order.postage %></strong></td>
          </tr>
        </table>
    </div>
  </div>

    <h5>注文内容</h5>
  <table class="table table-bordered">
    <tr class="table-active">
      <th>商品</th>
      <th>単価(税込)</th>
      <th>個数</th>
      <th>小計</th>
    </tr>

    <% @order_details.each do |order_detail| %>
    <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.price %></td>
      <td><%= order_detail.amount %></td>
      <td><%= order_detail.price*order_detail.amount %></td>
      <% total += order_detail.item.with_tax_price*order_detail.amount %>
    </tr>
    <% end %>
  </table>
</div>