<div class="container">
  <div class="row">
    <div class="col-2 p-3">
      <h4 class="table-active">
        <div style="text-align: center"><h4>新規会員登録</h4></div>
      </h4>
    </div>
  </div>

<table class="table table-hover table-inverse">
  <tbody>

  <%= form_with model: @customer, url: customer_registration_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="row p-1">
      <div class="col-2">
        名前
      </div>


      <div class="col-3 offset-1">
        <%= f.label :"(姓)" %>
        <%= f.text_field :last_name %>
      </div>

      <div class="col-3">
        <%= f.label :"(名)" %>
        <%= f.text_field :first_name %>
      </div>
    </div>

      <div class="row p-1">
        <div class="col-3">
        フリガナ
        </div>
        <div class="col-3 pr-2">
          <%= f.label :"(セイ)" %>
          <%= f.text_field :last_name_kana %>
        </div>
        <div class="col-3">
          <%= f.label :"(メイ)" %>
          <%= f.text_field :first_name_kana %>
      </div>
      </div>

      <div class="row p-1">
        <div class="col-3">
          <%= f.label :"メールアドレス" %>
        </div>
        <div class="col-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>

      <div class="row p-1">
        <div class="col-3">
          <%= f.label :"郵便番号(ハイフンなし)" %>
        </div>
        <div class="col-3">
          <%= f.text_field :postal_code %>
        </div>
      </div>

      <div class="row p-1">
        <div class="col-3">
          <%= f.label :"住所" %>
        </div>
        <div class="col-3">
          <%= f.text_field :address %>
        </div>
      </div>

      <div class="row p-1">
      <div class="col-3">
        <%= f.label :"電話番号(ハイフンなし)" %>
      </div>
      <div class="col-3">
        <%= f.text_field :telephone_number %>
      </div>
      </div>

      <div class="row p-1">
      <div class="col-3">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
      </div>
      <div class="col-3">
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
      </div>

      <div class="row p-1">
        <div class="col-3">
          <%= f.label :"パスワード(確認用)" %>
        </div>
        <div class="col-3">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="row p-1">
        <div class="col-3 offset-3">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      </div>
  <% end %>

  </tbody>
</table>


<div class="row pt-2">
    <div class="col-4 p-3">
      <h5 class="table-active">
        <div style="text-align: center"><h4>既に登録済みの方</h4></div>
      </h5>
    </div>
  </div>
  <div class="col-4 offset-2">
    <%= link_to "こちら", customer_session_path %>からログインしてください
  </div>
</div>
