<div class="container">

  <div class="row">
    <div class="col-2 p-4">
      <h4 class="table-active">
        <div style="text-align: center">マイページ</div>
      </h4>
    </div>
  </div>

  <div class="row pb-2">
    <div class="col-2 pr-2">
      <h4><strong>登録情報</strong></h4>
    </div>
    <%= link_to "編集する", edit_customer_path(@customer.id), class: "btn btn-success" %>
  </div>

  <table class="table table-bordered">
    <tr>
      <th class="col-3 table-active">氏名</th>
      <td>
        <%= @customer.last_name %>
        <%= @customer.first_name %>
      </td>
    </tr>

    <tr>
      <th class="col-3 table-active">フリガナ</th>
      <td>
        <%= @customer.last_name_kana %>
        <%= @customer.first_name_kana %>
      </td>
    </tr>

    <tr>
      <th class="col-3 table-active">郵便番号</th>
      <td>
        <%= @customer.postal_code %>
      </td>
    </tr>

    <tr>
      <th class="col-3 table-active">住所</th>
      <td>
        <%= @customer.address %>
      </td>
    </tr>

    <tr>
      <th class="col-3 table-active">電話番号</th>
      <td>
        <%= @customer.telephone_number %>
      </td>
    </tr>

    <tr>
      <th class="col-3 table-active">メールアドレス</th>
      <td>
        <%= @customer.email %>
      </td>
    </tr>
</table>

  <div class="row p-2">
    <div class="col-2"><h4><strong>配送先</strong></h4></div>
    <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %>
  </div>

  <div class="row p-2">
    <div class="col-2"><h4><strong>注文履歴</strong></h4></div>
    <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
  </div>

</div>