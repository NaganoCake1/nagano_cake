<h4>マイページ</h4>

<h4><strong>登録情報</strong></h4>
<%= link_to "編集する", edit_public_customer_path(@customer.id) %>

<table class="table table-hover table-inverse">
  <tbody>

    <tr>
      <td>
        氏名
        <%= @customer.last_name %>
        <%= @customer.first_name %>
      </td>
    </tr>

    <tr>
      <td>
        フリガナ
        <%= @customer.last_name_kana %>
        <%= @customer.first_name_kana %>
      </td>
    </tr>

    <tr>
      <td>
        郵便番号
        <%= @customer.postal_code %>
      </td>
    </tr>

    <tr>
      <td>
        住所
        <%= @customer.adress %>
      </td>
    </tr>

    <tr>
      <td>
        電話番号
        <%= @customer.telephone_number %>
      </td>
    </tr>

    <tr>
      <td>
        メールアドレス
        <%= @customer.email %>
      </td>
    </tr>

  </tbody>

</table>

<h4><strong>配送先</strong></h4>
<%= link_to "一覧を見る", public_addresses_path %>

<h4><strong>注文履歴</strong></h4>
<%= link_to "一覧を見る", public_orders_path %>