<div class="container">
  <div class="row">
    <div class="col-2 p-3">
      <h4 class="table-active">
        <div style="text-align: center">ログイン</div>
      </h4>
    </div>
  </div>

  <div class="row">
    <div class="col-4 p-3">
      <h5 class="table-active">
        <div style="text-align: center">会員の方はこちらからログイン</div>
      </h5>
    </div>
  </div>

  <%= form_with model: @customer, url: customer_session_path do |f| %>
    <div class="row pb-2">
      <div class="col-2 offset-1">
        <%= f.label :"メールアドレス" %>
      </div>
      <div class="col-6">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "50x20" %>
      </div>
    </div>

    <div class="row">
      <div class="col-2 offset-1">
        <%= f.label :"パスワード" %>
      </div>
      <div class="col-6">
        <%= f.password_field :password, autocomplete: "current-password", size: "50x20" %>
      </div>
    </div>

    <div class="actions pt-3">
      <div class="col-2 offset-3">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>


  <div class="row pt-5">
    <div class="col-4 p-3">
      <h5 class="table-active">
        <div style="text-align: center"><h5>会員登録がお済みでない方</h5></div>
      </h5>
    </div>
  </div>
  <div class="row">
    <div class="col-4 offset-2">
    <h6>
      <%= link_to "こちら", new_customer_registration_path %>
      から新規登録を行なってください。
    </div>
    </h6>
  </div>
</div>
