<div class="container">
  <div class="row p-3">
    <div class="col-3">
      <h4 class="table-active">ショッピングカート</h4>
    </div>
    <div class="col-2 offset-7">
      <%= link_to "カートを空にする", destroy_all_public_cart_items_path, method: :delete, class: "btn btn-danger" %>
    </div>
  </div>

    <table class="table table-bordered">
        <tr class="table-active">
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>

        <% total = 0 %>

        <% if current_customer.cart_items.present? %>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= image_tag cart_item.item.image, size: "60x50" %>
                <%= cart_item.item.name %>
              </td>
              <td><%= cart_item.item.with_tax_price %></td>
              <td>
                <%= form_with model: @cart_items, url: public_cart_item_path(cart_item.id), method: :patch, local:true do |f| %>
                  <%= f.select :amount, *[1..10], { selected: cart_item.amount } %>
                  <%= f.submit "変更",class: "btn btn-success" %>
                <% end %>
              </td>
              <td><%= cart_item.subtotal %></td>
              <td><%= link_to "消去する", public_cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %></td>
              <% total += cart_item.subtotal %>
            </tr>
          <% end %>
        <% end %>
    </table>

    <div class="row justify-content-between">
        <div class="col-2">
          <%= link_to "買い物を続ける", public_items_path, class: "btn btn-primary" %>
        </div>
        <div class="col-4 offset-6">
          <table class="table table-bordered">
            <tr>
              <th class="table-active">合計金額</th>
              <td><%= total %></td>
            </tr>
          </table>
        </div>
    </div>


    <div style="text-align: center">
      <%= link_to "情報入力に進む", new_public_order_path, class: "btn btn-success" %>
    </div>
</div>