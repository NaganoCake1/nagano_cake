<h4>ショッピングカート</h4>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items each |cart_item| do %>
      <tr><%= @item.name %>
        <td><%= cart_item.item.with_tax_price %><</td>
        <td><%= cart_item.amount %></td>
        <td><%= cart_item.subtotal %></td>
        <td><%= %></td>
        <% @total +=  (cart_item.price * 1.1).floor * cart_item.amount %>
      </tr>
      <td>合計金額</td>
      <td><%= @total %></td>
    <% end %>

  </tbody>
</table>
